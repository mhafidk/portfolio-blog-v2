---
import Layout from './Layout.astro';
import { formatDate } from '../script/helper';

const { frontmatter } = Astro.props;
---
<Layout title={frontmatter.title}>
  <div class="px-4">
    <img src={frontmatter.image['url']} alt={frontmatter.image['alt']} class="w-full h-[36rem] object-cover pt-4 rounded">
    <div class="max-w-screen-sm mx-auto">
      <h1 class="mt-12 text-center text-4xl font-semibold">{frontmatter.title}</h1>
    </div>
    <p class="mt-3 mb-6 text-center text-sm text-secondary">{formatDate(frontmatter.pubDate)}</p>
    <div class="max-w-screen-md mx-auto prose prose-lg">
      <slot />
    </div>
  </div>
</Layout>