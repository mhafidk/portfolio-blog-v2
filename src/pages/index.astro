---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';
---

<Layout title="Muhammad Hafid Khoirul">
	<div class="px-4 pb-48">
		<div class="max-w-screen-md mx-auto">
			<div class="hero min-h-screen pb-48">
				<div class="hero-content text-center">
					<div class="max-w-lg">
						<h1 class="text-5xl font-bold">Muhammad Hafid K</h1>
						<p class="py-6 max-w-md">Software engineer based in Bogor, Indonesia. Currently, working as a backend engineer at <a class="link link-primary" href="https://www.qontak.com" target="_blank" rel="norefferer">Qontak</a>.</p>
						<a href="/about" class="btn btn-primary">More about me</a>
					</div>
				</div>
			</div>
		</div>
		<div class="">
			<h2 class="text-center text-3xl font-semibold">Latest Blog Posts</h2>
			<div class="grid grid-cols-1 gap-4 mt-8">
				<BlogCard />
				<BlogCard />
				<BlogCard />
				<BlogCard />
			</div>
			<div class="text-center pt-16">
				<a class="btn btn-primary" href="/blog">More posts</a>
			</div>
		</div>
		<div class="max-w-screen-md mx-auto mt-48">
			<h2 class="text-center text-3xl font-semibold">Experiences</h2>
			<div class="mt-8"></div>
				<ul class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical">
					<li>
						<div class="timeline-middle">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" /></svg>
						</div>
						<div class="timeline-start md:text-end mb-10 md:pr-3 pl-2 md:pl-0 pt-1">
							<time class="font-mono italic">2020 - Present</time>
							<div class="text-lg font-semibold mt-2">Backend Engineer</div>
							<a class="link link-primary font-medium" href="https://www.qontak.com" target="_blank">Qontak</a>
							<div class="flex gap-2 mt-4 flex-wrap justify-end">
								<p class="px-2 py-1 rounded text-sm border border-primary text-primary">Ruby on Rails</p>
								<p class="px-2 py-1 rounded text-sm border border-primary text-primary">Ruby</p>
								<p class="px-2 py-1 rounded text-sm border border-primary text-primary">Go</p>
								<p class="px-2 py-1 rounded text-sm border border-primary text-primary">JavaScript</p>
							</div>
						</div>
						<hr/>
					</li>
					<li>
						<hr />
						<div class="timeline-middle">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" /></svg>
						</div>
						<div class="timeline-end mb-10 pl-3 pt-1">
							<time class="font-mono italic">2020</time>
							<div class="text-lg font-semibold mt-2">Graduated</div>
							<p>Computer Engineer at <a class="link link-primary font-medium" href="https://www.ub.ac.id" target="_blank">Brawijaya University</a></p>
							<p></p>
						</div>
						<hr />
					</li>
				</ul>
			</div>
		</div>
	</div>
</Layout>
